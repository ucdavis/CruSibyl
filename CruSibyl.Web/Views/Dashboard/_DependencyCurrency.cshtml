@using CruSibyl.Web.Models.Dashboard
@model DependencyCurrencyViewModel

<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <h3 class="card-title">Dependency & Platform Currency</h3>
    <p class="text-sm opacity-70">Prioritized by environment weight × app importance × version delta severity</p>

    <!-- Dependencies Table -->
    <div class="overflow-x-auto">
      <table class="table table-zebra table-sm">
        <thead>
          <tr>
            <th>Priority</th>
            <th>App</th>
            <th>Importance</th>
            <th>Platform</th>
            <th>Package</th>
            <th>Current</th>
            <th>Latest Major</th>
            <th>Latest Minor</th>
            <th>Severity</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var dep in Model.Dependencies)
          {
            <tr class="@(dep.SeverityLevel == "High" || dep.SeverityLevel == "Critical" ? "bg-error bg-opacity-10" : "")">
              <td>
                <div class="radial-progress text-xs" style="--value:@((int)(dep.PriorityScore * 10)); --size: 2rem;">
                  @dep.PriorityScore.ToString("0.0")
                </div>
              </td>
              <td>@dep.AppName</td>
              <td>
                <progress class="progress progress-primary w-16" value="@((int)(dep.AppImportance * 100))" max="100"></progress>
              </td>
              <td><span class="badge badge-outline badge-sm">@dep.PlatformName</span></td>
              <td class="font-mono text-xs">@dep.PackageName</td>
              <td class="font-mono text-xs">@dep.CurrentVersion</td>
              <td class="font-mono text-xs">
                @if (dep.LatestMajorVersion != null && dep.LatestMajorVersion != dep.CurrentVersion)
                {
                  <span class="text-warning">@dep.LatestMajorVersion</span>
                }
                else
                {
                  <span class="opacity-50">@(dep.LatestMajorVersion ?? "-")</span>
                }
                @if (!string.IsNullOrEmpty(dep.LatestMajorPrerelease))
                {
                  <br/><span class="text-xs opacity-50">@dep.LatestMajorPrerelease</span>
                }
              </td>
              <td class="font-mono text-xs">
                @if (dep.LatestMinorVersion != null && dep.LatestMinorVersion != dep.CurrentVersion)
                {
                  <span class="text-info">@dep.LatestMinorVersion</span>
                }
                else
                {
                  <span class="opacity-50">@(dep.LatestMinorVersion ?? "-")</span>
                }
                @if (!string.IsNullOrEmpty(dep.LatestMinorPrerelease))
                {
                  <br/><span class="text-xs opacity-50">@dep.LatestMinorPrerelease</span>
                }
              </td>
              <td>
                @if (dep.SeverityLevel == "High" || dep.SeverityLevel == "Critical")
                {
                  <span class="badge badge-error badge-sm">@dep.SeverityLevel</span>
                }
                else if (dep.SeverityLevel == "Medium")
                {
                  <span class="badge badge-warning badge-sm">@dep.SeverityLevel</span>
                }
                else
                {
                  <span class="badge badge-ghost badge-sm">@dep.SeverityLevel</span>
                }
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>

    @if (!Model.Dependencies.Any())
    {
      <div class="alert alert-info">
        <div>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current flex-shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>No dependency data available for this environment.</span>
        </div>
      </div>
    }
  </div>
</div>
