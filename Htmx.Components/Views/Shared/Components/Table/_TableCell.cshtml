@using Htmx.Components.Table.Models
@using Htmx.Components.Action
@using System.Text.Encodings.Web

@model TableCellPartialModel

@{
    var value = Model.Column.GetValue(Model.Row);
    var isEditing = Model.Column.IsEditable && Model.Row.RowType == RowType.Editable;
}

@if (isEditing)
{
    @switch (Model.Column.DataType)
    {
        case Type t when t == typeof(int):
            <input name="row.Item.@Model.Column.DataName" id="@(Model.Row.RowId)_@(Model.Column.Id)" type="number"
                class="input input-bordered w-full" value="@(value ?? 0)" />
            break;
        case Type t when t == typeof(decimal):
            <input name="row.Item.@Model.Column.DataName" id="@(Model.Row.RowId)_@(Model.Column.Id)" type="number" step="0.01"
                class="input input-bordered w-full" value="@(value ?? 0.0m)" />
            break;
        case Type t when t == typeof(DateTime):
            <input name="row.Item.@Model.Column.DataName" id="@(Model.Row.RowId)_@(Model.Column.Id)" type="date"
                class="input input-bordered w-full" value="@(value != null ? ((DateTime)value).ToString("yyyy-MM-dd") : "")" />
            break;
        case Type t when t == typeof(bool):
            <input name="row.Item.@Model.Column.DataName" id="@(Model.Row.RowId)_@(Model.Column.Id)" type="checkbox"
                class="checkbox checkbox-primary" @(value != null && (bool)value ? "checked" : "") />
            break;
        default:
            <input name="row.Item.@Model.Column.DataName" id="@(Model.Row.RowId)_@(Model.Column.Id)" type="text"
                class="input input-bordered w-full" value="@value?.ToString()" />
            break;
    }
}
else
{
    @Html.Encode(value?.ToString())
}